@model IEnumerable<MVC_Project_13_April.Models.Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a asp-action="Create" class="btn btn-primary">Create New Product</a>
<br />
<p>Rushikesh Kotwal Software Engineer.</p>
<table class="table">

    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>

        </tr>

    </thead>

    <tbody>

        @foreach (var itam in Model)
        {
            <tr>
                <td>@itam.Id</td>
                <td>@itam.Name</td>
                <td>@itam.Description</td>
                <td>@itam.Category</td>

                <td>
                    <a asp-action="GetbyId" asp-route-id="@itam.Id" class="btn btn-dark">View</a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@itam.Id" class="btn btn-dark">Update</a>
                </td>

                <td>
                    <form asp-action="Delete" asp-route-id="@itam.Id" style="display:inline;"
                          onclick="return confirm('are you sure to delete this record');">

                        <button type="submit">Delete</button>
                    </form>

                </td>



            </tr>

        }

    </tbody>
</table>